{
  "manifest_version": 3,
  "name": "Job Application Tracker Tool",
  "version": "1.0",
  "description": "Capture and track your job applications from the browser.",
  "permissions": ["activeTab", "scripting", "storage", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
